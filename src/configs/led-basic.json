{
  "id": "led-basic",
  "title": "Basic LED Control",
  "description": "Learn to control LEDs using drag-and-drop blocks",
  "type": "virtual",
  "problemStatement": "Create a program that turns on the LED for 2 seconds, then turns it off for 1 second, and repeats this pattern.",
  "requiredBlocks": ["led_on", "led_off", "delay"],
  "components": [
    {
      "id": "led1",
      "type": "led",
      "name": "Red LED",
      "pins": [
        { "id": "pin1", "type": "digital", "number": 13, "mode": "output" }
      ],
      "properties": [
        { "name": "brightness", "type": "number", "value": 255, "min": 0, "max": 255 },
        { "name": "color", "type": "string", "value": "red" }
      ],
      "simulation": {
        "visualRepresentation": {
          "type": "svg",
          "data": {
            "circle": {
              "cx": 50,
              "cy": 50,
              "r": 20,
              "fill": "#ff0000",
              "stroke": "#000",
              "strokeWidth": 2
            }
          }
        },
        "behavior": {
          "type": "led",
          "parameters": {
            "pin": 13,
            "brightness": 255
          }
        }
      }
    }
  ],
  "testCases": [
    {
      "id": "led_on_test",
      "description": "LED should turn on",
      "expectedOutput": {
        "led1": {
          "isOn": true,
          "brightness": 255
        }
      },
      "timeout": 3000
    },
    {
      "id": "led_off_test",
      "description": "LED should turn off",
      "expectedOutput": {
        "led1": {
          "isOn": false,
          "brightness": 0
        }
      },
      "timeout": 3000
    }
  ]
}