{
  "id": "servo-control",
  "title": "Servo Motor Control",
  "description": "Learn to control servo motors with precise angle positioning",
  "type": "virtual",
  "problemStatement": "Create a program that moves the servo motor to 90 degrees, waits for 1 second, then moves it to 0 degrees, waits for 1 second, and repeats this pattern.",
  "requiredBlocks": ["servo_move", "delay"],
  "components": [
    {
      "id": "servo1",
      "type": "servo",
      "name": "Servo Motor",
      "pins": [
        { "id": "pin1", "type": "digital", "number": 9, "mode": "output" }
      ],
      "properties": [
        { "name": "minAngle", "type": "number", "value": 0, "min": 0, "max": 180 },
        { "name": "maxAngle", "type": "number", "value": 180, "min": 0, "max": 180 },
        { "name": "speed", "type": "number", "value": 1, "min": 0.1, "max": 5 }
      ],
      "simulation": {
        "visualRepresentation": {
          "type": "svg",
          "data": {
            "rect": {
              "x": 40,
              "y": 40,
              "width": 20,
              "height": 40,
              "fill": "#666",
              "stroke": "#000",
              "strokeWidth": 2
            },
            "line": {
              "x1": 50,
              "y1": 40,
              "x2": 50,
              "y2": 20,
              "stroke": "#000",
              "strokeWidth": 3
            }
          }
        },
        "behavior": {
          "type": "servo",
          "parameters": {
            "pin": 9,
            "minAngle": 0,
            "maxAngle": 180
          }
        }
      }
    }
  ],
  "testCases": [
    {
      "id": "servo_90_test",
      "description": "Servo should move to 90 degrees",
      "expectedOutput": {
        "servo1": {
          "angle": 90
        }
      },
      "timeout": 3000
    },
    {
      "id": "servo_0_test",
      "description": "Servo should move to 0 degrees",
      "expectedOutput": {
        "servo1": {
          "angle": 0
        }
      },
      "timeout": 3000
    }
  ]
}